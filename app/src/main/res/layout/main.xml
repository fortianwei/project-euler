<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <ScrollView
        android:id="@+id/scrollviewId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/RelativeLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/showOffers"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dip" />

            <Button
                android:id="@+id/getAmountButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/showOffers" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="200dip"
                android:layout_height="42dip"
                android:layout_below="@id/getAmountButton"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:text="10" />

            <Button
                android:id="@+id/spendMoneyButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/getAmountButton"
                android:layout_toRightOf="@id/et1"
                android:text="扣除" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="200dip"
                android:layout_height="42dip"
                android:layout_below="@id/spendMoneyButton"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:text="10" />

            <Button
                android:id="@+id/giveMoneyButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spendMoneyButton"
                android:layout_toRightOf="@id/et2"
                android:text="增加"
                android:visibility="visible" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="150dip"
                android:layout_height="42dip"
                android:layout_below="@id/giveMoneyButton"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:text="10" />

            <Button
                android:id="@+id/setMoneyButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/giveMoneyButton"
                android:layout_toRightOf="@id/et3"
                android:text="设置虚拟货币总额"
                android:visibility="visible" />

            <EditText
                android:id="@+id/et4"
                android:layout_width="150dip"
                android:layout_height="42dip"
                android:layout_below="@id/setMoneyButton"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:text="sleep" />

            <Button
                android:id="@+id/getParamsButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setMoneyButton"
                android:layout_toRightOf="@id/et4"
                android:text="获取自定义参数" />

            <EditText
                android:id="@+id/et0"
                android:layout_width="200dip"
                android:layout_height="42dip"
                android:layout_below="@id/getParamsButton"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:text="1000000001" />

            <Button
                android:id="@+id/setCurrentIDButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/getParamsButton"
                android:layout_toRightOf="@id/et0"
                android:text="设置账户ID" />

            <TextView
                android:id="@+id/libraryVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/setCurrentIDButton"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/libraryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/libraryVersion"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/appid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/libraryTime"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:background="#fffff0" >

        <TextView
            android:id="@+id/mainContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>